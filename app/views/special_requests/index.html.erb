  <div class="delete_request_menu">
    <div class="btn btn-danger"><%= link_to image_tag('delete.png'), special_request, confirm: 'Â¿Estas seguro de querer eliminar?', method: :delete %></div>
    <div class="btn btn-info"><%= link_to image_tag('pray.png'), special_request_path(special_request.id)%></div>
  </div>
  <%end%>
</div>
</center>
<%end%>
   <div class="container">
       <div class="span7 pull-right" style="margin-right:40px;">
